@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix schema: <http://schema.org/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rml: <http://www.w3.org/ns/r2rml#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> . 

schema:RMLParentMapShape
    a sh:NodeShape ;
    sh:targetClass rml:ParentMap ;
    sh:targetObjectsOf rml:parent ;
    sh:name "ParentMap" ;
    sh:description """
    Represents a Parent Map.
    """ ;
    sh:message """
    rml:ParentMap must specify a literal referencing data in the parent data
    source.
    """ ;

    sh:and (
        # Inherited shapes
        schema:RMLTermMapShape
        schema:RMLLogicalTargetPropertiesShape
        # Language Map specific shapes
        [
            sh:path rml:termType;
            sh:message """
            rml:termType for Language Map can only be a rml:Literal;
            """;
            sh:in (rml:Literal);
        ]
    ) ;
.

schema:RMLparentShape
    a sh:PropertyShape ;
    sh:path rml:parent ;
    sh:targetSubjectsOf rml:parent ;
    sh:name "parent" ;
    sh:description """
    A Literal reference to use as reference to the parent data source.
    """ ;
    sh:message """
    rml:parent shortcut for rml:ParentMap must be a Literal.
    """ ;
    sh:nodeKind sh:Literal ;
    sh:datatype xsd:string ;
.

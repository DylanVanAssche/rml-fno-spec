@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix schema: <http://schema.org/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rml: <http://w3id.org/rml/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> . 

schema:RMLGraphMapShape
    a sh:NodeShape ;
    sh:targetClass sh:GraphMap ;
    sh:targetObjectsOf rml:graphMap ;
    sh:name "GraphMap" ;
    sh:description """
    Represents a Graph Map.
    """ ;
    sh:message """
    rml:GraphMap must specify an rml:template, rml:reference or rml:constant 
    with the IRI of the Named Graph.
    """ ;

    sh:and (
        # Inherited shapes
        schema:RMLTermMapShape
        schema:RMLLogicalTargetPropertiesShape
        # Graph Map specific shapes
        [
            sh:path rml:termType;
            sh:message """
            rml:termType must be an IRI for a Graph Map.
            """;
            sh:in (rml:IRI);
        ]
    ) ;
.


schema:RMLgraphShape 
    a sh:NodeShape ;
    sh:targetSubjectsOf rml:graph ;
    sh:name "graph" ;
    sh:description """
    An IRI reference for use as the graph name of all triples generated with 
    the Graph Map. 
    """ ;
    sh:message """
    rml:graph must be an IRI.
    """ ;
    # Allow blank nodes because SHACL sees ex:PersonGraph also as blank node.
    sh:nodeKind sh:BlankNodeOrIRI ;
.
